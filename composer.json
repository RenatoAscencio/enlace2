{
    "name": "enlace2/laravel-url-shortener",
    "description": "Laravel package for Enlace2 URL shortener service integration - Complete API wrapper with support for links, QR codes, campaigns, and channels",
    "keywords": ["laravel", "url-shortener", "enlace2", "qr-codes", "campaigns", "api", "php"],
    "homepage": "https://github.com/RenatoAscencio/enlace2",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Renato Ascencio",
            "email": "hello@enlace2.com",
            "homepage": "https://github.com/RenatoAscencio",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.0|^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Enlace2\\LaravelUrlShortener\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Enlace2\\LaravelUrlShortener\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Enlace2\\LaravelUrlShortener\\Enlace2ServiceProvider"
            ],
            "aliases": {
                "Enlace2": "Enlace2\\LaravelUrlShortener\\Facades\\Enlace2"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level 8",
        "cs-check": "phpcs --standard=PSR12 src tests",
        "cs-fix": "phpcbf --standard=PSR12 src tests",
        "php-cs-fixer": "php-cs-fixer fix --diff --dry-run",
        "php-cs-fixer-fix": "php-cs-fixer fix",
        "quality": ["@phpstan", "@cs-check", "@test"],
        "fix": ["@php-cs-fixer-fix", "@cs-fix"]
    },
    "support": {
        "issues": "https://github.com/RenatoAscencio/enlace2/issues",
        "source": "https://github.com/RenatoAscencio/enlace2",
        "docs": "https://github.com/RenatoAscencio/enlace2#readme"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/RenatoAscencio"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true
}