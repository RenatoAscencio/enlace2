{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}"
      }
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9003
    },
    {
      "name": "Run PHPUnit Tests",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/vendor/bin/phpunit",
      "args": [
        "--configuration",
        "${workspaceFolder}/phpunit.xml"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "XDEBUG_MODE": "coverage"
      }
    },
    {
      "name": "Run Current PHPUnit Test",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/vendor/bin/phpunit",
      "args": [
        "${file}"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Run Example - Basic Usage",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/examples/basic_usage.php",
      "args": [
        "${input:apiKey}"
      ],
      "cwd": "${workspaceFolder}"
    }
  ],
  "inputs": [
    {
      "id": "apiKey",
      "type": "promptString",
      "description": "Enter your Enlace2 API Key",
      "default": ""
    }
  ]
}
