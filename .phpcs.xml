<?xml version="1.0"?>
<ruleset name="Laravel Package">
    <description>PHP CodeSniffer configuration for Laravel Package</description>

    <!-- Files to check -->
    <file>src</file>
    <file>tests</file>

    <!-- Exclude vendor -->
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.css</exclude-pattern>

    <!-- Use PSR-12 standard -->
    <rule ref="PSR12">
        <!-- Exclude some rules that might be too strict for Laravel packages -->
        <exclude name="PSR1.Files.SideEffects"/>
        <exclude name="PSR12.Files.FileHeader"/>
    </rule>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Use colors -->
    <arg name="colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>
</ruleset>