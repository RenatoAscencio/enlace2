parameters:
    level: 4
    paths:
        - src
        - tests

    # Laravel specific ignores
    ignoreErrors:
        - '#Call to an undefined method Illuminate\\.*#'
        - '#Parameter .* of method .* has no typehint specified#'
        - '#Method .* has no return typehint specified#'
        - '#Function .* is deprecated#'
        - '#.*deprecation.*#'
        - '#.*Serializable.*#'
        - '#.*mbstring.*#'
        - '#Unsafe usage of new static\(\)#'
        - '#Call to an undefined static method.*#'
        - '#Unreachable statement.*#'

    # Cache and temporary files
    tmpDir: .phpstan.cache

    # Bootstrap file for Laravel helpers
    bootstrapFiles:
        - vendor/autoload.php

    # Exclude vendor directories that have deprecation warnings
    excludePaths:
        - vendor/